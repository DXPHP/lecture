<view class='head-info flex-center'>
  <view class='user-info box-shadowB' bindtap='ClickPersonality'>
    <view class='user-info-left flex-center'>
        <view  class="user-pho">
          <open-data type='userAvatarUrl'></open-data>
        </view>
        <view class="user-label">
          <image src='/img/V.png'></image>
        </view>
    </view>
    <view class='user-name flex-vertical font-size14'>
      <view class='userName'>{{user_name}}</view>
      <view class='userPost'>{{user_post}}</view>
    </view>
    <view class='more flex-center'>
      <image src="/img/fangxiang.png" class='skip-bag'></image>
    </view>
  </view>
  <image src='/img/back-my.png' class=''></image>
</view>


